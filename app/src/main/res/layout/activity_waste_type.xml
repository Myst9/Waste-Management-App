<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WasteTypeActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="272dp"
        android:layout_height="54dp"
        android:text="What type of waste do want to sell?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="343dp"
        android:layout_height="463dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="112dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/sellplastic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:padding="4dp"
            android:text="Plastic"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:hint="Enter Approximate weight:" />

        <RadioButton
            android:id="@+id/sellpaper"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:padding="4dp"
            android:text="Paper"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:hint="Enter Approximate weight:" />

        <RadioButton
            android:id="@+id/sellcardboard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:padding="4dp"
            android:text="Cardboard"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:hint="Enter Approximate weight:" />

        <RadioButton
            android:id="@+id/sellglass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:padding="4dp"
            android:text="Glass"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:hint="Enter Approximate weight:" />

        <RadioButton
            android:id="@+id/electronicwaste"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="false"
            android:padding="4dp"
            android:text="Electronic Waste"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:hint="Enter Approximate weight:" />

    </RadioGroup>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935" />
</androidx.constraintlayout.widget.ConstraintLayout>